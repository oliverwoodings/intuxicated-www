{
  "apps" : [{
    "name": "intuxicated-www",
    "script": "server.js",
    "env_production": {
      "NODE_ENV": "production"
    }
  }],
  "deploy": {
    "production": {
      "user": "root",
      "host": "intuxicated.owoodings.net",
      "ref": "origin/master",
      "repo": "git@github.com:oliverwoodings/intuxicated-www.git",
      "path": "~/apps/intuxicated-www",
      "post-deploy" : "make bootstrap build && pm2 startOrRestart ecosystem.json --env production"
    }
  }
}
